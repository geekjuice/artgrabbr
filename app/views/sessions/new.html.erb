<% provide(:title, "Sign in") %>
<div class="container-content">
  <div class="center">
    <h1>Sign in</h1>
    <div class="row">
      <div class="span6 offset3">
        <div class="hero-unit signup">
          <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Sign in", class: "btn-custom sign-in" %>
          <% end %>
          <!-- <label class="checkbox">
            Remember me <%#= check_box_tag :remember_me, 1, params[:remember_me] %>  
          </label> -->
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
          <p>Forgot password? <%= link_to 'Reset password', new_password_reset_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>