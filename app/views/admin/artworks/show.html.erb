<div class="row">
  <div class="span4 offset4">
    <h1>Ordering</h1>
    <div class="center">
      <p>
        <% if @artwork.sold %>
          <h2>SOLD!</h2>   
          <%= link_to 'View Order', admin_order_path(artwork_id: @artwork.id), class: "btn btn-large" %>     
        <% else %>
          <h2>Available</h2>
          <%= link_to 'Order now', new_admin_order_path(artwork_id: @artwork.id), class: "btn btn-large btn-primary" %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="span8 offset2">
    <div class="hero-unit">
      <p>
        <b>User ID:</b>
        <%= User.find(@artwork.user_id).name %>
      </p>
      <p>
        <b>User Check (Debug)</b>
        <%= @artwork.user.name %>
      </p>
      <p>
        <b>Title:</b>
        <%= @artwork.title %>
      </p>

      <p>
        <b>Price:</b>
        $<%= @artwork.price %>
      </p>

      <p>
        <b>Medium:</b>
        <%= @artwork.medium %>
      </p>

      <p>
        <b>Info:</b>
        <%= @artwork.info %>
      </p>

      <p>
        <%= link_to 'Edit', edit_admin_artwork_path(@artwork), class: "btn btn-small" %> |
        <%= link_to 'Back', admin_user_path(@artwork.user), class: "btn btn-small" %>
      </p>
    </div>
  </div>
</div>